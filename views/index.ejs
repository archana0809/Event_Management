
<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Details</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
      <link rel="stylesheet" href="/css/styles.css">

    </div>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Event Date</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Details</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% customers.forEach(customer => { %>
      <tr>
        <td><%= customer.firstName %></td>
        <td><%= customer.Date.toDateString() %></td>
        <td><%= customer.email %></td>
        <td><%= customer.tel %></td>
        <td><%= customer.details %></td>
        <td class="actions">
          <a href="/view/<%= customer._id %>" class="btn btn-info btn-sm">View</a>
          <a href="/edit/<%= customer._id %>" class="btn btn-warning btn-sm">Edit</a>
          <a href="/delete/<%= customer._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

<!-- views/customer/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Customer Information</title>
  <!-- Bootstrap CDN for styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    .container {
      width: 70%;
      margin: 0 auto;
    }
    .form-label {
      font-weight: bold;
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #004085;
    }
    .form-group {
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="my-4">Edit Customer Information</h1>

    <!-- Edit Customer Form -->
    <form action="/edit/<%= customer._id %>" method="POST">
      <!-- First Name -->
      <div class="form-group">
        <label for="firstName" class="form-label">First Name</label>
        <input type="text" name="firstName" id="firstName" class="form-control" value="<%= customer.firstName %>" required>
      </div>

      <!-- Event Date -->
      <div class="form-group">
        <label for="Date" class="form-label">Event Date</label>
        <input type="date" name="Date" id="Date" class="form-control" value="<%= customer.Date.toISOString().split('T')[0] %>" required>
      </div>

      <!-- Phone Number -->
      <div class="form-group">
        <label for="tel" class="form-label">Phone Number</label>
        <input type="tel" name="tel" id="tel" class="form-control" value="<%= customer.tel %>" required>
      </div>

      <!-- Email -->
      <div class="form-group">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= customer.email %>" required>
      </div>

      <!-- Event Details -->
      <div class="form-group">
        <label for="details" class="form-label">Event Details</label>
        <textarea name="details" id="details" rows="4" class="form-control" required><%= customer.details %></textarea>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary">Save Changes</button>
      <a href="/" class="btn btn-secondary ml-2">Cancel</a>
    </form>
  </div>

  <!-- Bootstrap JS (for responsiveness and form interactions) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
